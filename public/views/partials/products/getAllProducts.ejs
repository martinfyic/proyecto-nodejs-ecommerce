<section class="container d-flex row justify-content-around">
	<% products.forEach(function(product) { %>
	<div class="col-md-6 col-xl-3">
		<div class="card border-0 p-5">
			<img
				src="<%=product.img%>"
				class="card-img-top"
				alt="<%= product.name %>"
			/>
			<div
				class="card-body d-flex align-items-center flex-column justify-content-around"
			>
				<h5 class="fs-6"><%= product.name %></h5>
				<p class="card-text text-secondary">$U <%= product.price %></p>
				<a
					href="http://localhost:8080/api/products/<%= product._id %>"
					class="btn btn-primary"
					>Ver producto</a
				>
			</div>
		</div>
	</div>
	<% }); %>
	<hr />
</section>
