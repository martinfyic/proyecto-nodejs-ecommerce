<div class="col-md-6 col-xl-3">
	<h2 class="fs-1 text-center mt-1 text-primary">
		CATEGORIA <span><%= product.category.name %></span>
	</h2>
	<hr />
	<div class="card border-0 p-5 mt-3">
		<img
			src="<%=product.img%>"
			class="card-img-top shadow-lg"
			alt="<%= product.name %>"
			title="<%= product.name %>"
		/>
		<div
			class="card-body d-flex align-items-center flex-column justify-content-around"
		>
			<h5 class="fs-5"><%= product.name %></h5>
			<p class="card-text text-secondary">$U <%= product.price %></p>
			<p class="card-text text-secondary">STOCK: <%= product.stock %></p>
			<a
				href="/products/<%= product._id %>"
				class="btn btn-primary px-5 py-2 mb-3"
				>Comprar</a
			>
			<a
				href="/products"
				class="btn btn-outline-dark px-5 py-2 mb-1"
				>Volver</a
			>
		</div>
	</div>
	<hr />
</div>
